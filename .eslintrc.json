{
    "env": {
        "browser": true,
        "es6": true
    },
    "globals": {
        "console": true,
        "database": true,
        "google": true,
        "firebase": true
    },
    "extends": "eslint:recommended",
    "rules": {
        "no-console": 0,
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "never"
        ]
    }
}
